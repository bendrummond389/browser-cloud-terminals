generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())
  given_name     String
  family_name    String
  nickname       String
  name           String
  picture        String
  locale         String
  updated_at     DateTime   @default(now()) @updatedAt
  email          String     @unique
  email_verified Boolean
  sub            String
  sid            String
  instances      Instance[]
}

model Instance {
  id          Int    @id @default(autoincrement())
  userId      Int
  user        User   @relation(fields: [userId], references: [id])
  namespace   String
  podName     String
  serviceName String
  IngressName String
  ingressPath String
  distro      String
}
